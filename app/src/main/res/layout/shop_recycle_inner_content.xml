<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:elevation="5dp"
              android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_frame_equipment"
            />

        <ImageView
            android:id="@+id/item_image_container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_physical_attack"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Placeholder"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2.5dp">

                    <ImageView
                        android:id="@+id/physical_attack_icon"
                        android:layout_width="@dimen/item_detail_icon_side_length"
                        android:layout_height="@dimen/item_detail_icon_side_length"
                        android:src="@drawable/ic_physical_attack"/>

                    <TextView
                        android:id="@+id/physical_attack_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/physical_attack_icon"
                        android:text="ATK:"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/physical_attack_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/physical_attack_label"
                        android:text="0"
                        android:textSize="@dimen/item_detail_text_size"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2.5dp">

                    <ImageView
                        android:id="@+id/magical_attack_icon"
                        android:layout_width="@dimen/item_detail_icon_side_length"
                        android:layout_height="@dimen/item_detail_icon_side_length"
                        android:src="@drawable/ic_magic_attack"/>

                    <TextView
                        android:id="@+id/magical_attack_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/magical_attack_icon"
                        android:text="MAG:"
                        android:textSize="@dimen/item_detail_text_size"/>

                    <TextView
                        android:id="@+id/magical_attack_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/magical_attack_label"
                        android:text="0"
                        android:textSize="@dimen/item_detail_text_size"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2.5dp">

                    <ImageView
                        android:id="@+id/physical_defense_icon"
                        android:layout_width="@dimen/item_detail_icon_side_length"
                        android:layout_height="@dimen/item_detail_icon_side_length"
                        android:src="@drawable/ic_physical_defense"/>

                    <TextView
                        android:id="@+id/physical_defense_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/physical_defense_icon"
                        android:text="DEF:"
                        android:textSize="@dimen/item_detail_text_size"/>

                    <TextView
                        android:id="@+id/physical_defense_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/physical_defense_label"
                        android:text="0"
                        android:textSize="@dimen/item_detail_text_size"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2.5dp">

                    <ImageView
                        android:id="@+id/magical_defense_icon"
                        android:layout_width="@dimen/item_detail_icon_side_length"
                        android:layout_height="@dimen/item_detail_icon_side_length"
                        android:src="@drawable/ic_magic_defense"/>

                    <TextView
                        android:id="@+id/magical_defense_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/magical_defense_icon"
                        android:text="SPR:"
                        android:textSize="@dimen/item_detail_text_size"/>

                    <TextView
                        android:id="@+id/magical_defense_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/magical_defense_label"
                        android:text="0"
                        android:textSize="@dimen/item_detail_text_size"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:elevation="6dp"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/price_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Price: "
                    android:textColor="@color/colorGold"
                    android:textSize="@dimen/item_detail_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/price_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textColor="@color/colorGold"
                    android:textSize="@dimen/item_detail_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/currency_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="G"
                    android:textColor="@color/colorGold"
                    android:textSize="@dimen/item_detail_text_size"
                    android:textStyle="bold"/>
            </LinearLayout>

            <Button
                android:id="@+id/add_to_cart_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:text="Add To Cart"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>